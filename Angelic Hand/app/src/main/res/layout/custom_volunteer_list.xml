<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/volunteer_list_user_image_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_user_profile"
            />

        <TextView
            android:id="@+id/volunteer_list_user_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:padding="5dp"
            android:gravity="center"
            android:background="@drawable/inputusers"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/volunteer_list_verified_volunteer_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:visibility="invisible"
            android:src="@drawable/icon_verified_volunteer"
            />

    </LinearLayout>

</RelativeLayout>