<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uploadPictureFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        >

      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/fragment_user_pic_image_imageview"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/icon_user_profile"
          />

    </LinearLayout>



        <Button
            android:id="@+id/fragment_user_pic_upload_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Upload Picture"
            android:layout_marginTop="30dp"
            android:background="@drawable/button"
           android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/fragment_user_pic_skip_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Skip"
            android:background="@drawable/button1"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"

            />
    </LinearLayout>


</RelativeLayout>